{
  "manifest_version": "1.1",
  "updated_on": "2026-02-12",
  "language_policy": {
    "default": "de-DE",
    "style": "einfache_sprache",
    "term_explanation_required": true,
    "example": "Logging (Protokollierung)"
  },
  "accessibility": {
    "themes_required": [
      "light",
      "dark",
      "high_contrast"
    ],
    "focus_visibility": "required",
    "contrast_ratio_target": "WCAG_AA_or_higher",
    "error_dialog_buttons": [
      "Erneut versuchen",
      "Reparatur",
      "Protokoll"
    ],
    "help_element_required_per_iteration": true
  },
  "quality_gates": [
    {
      "id": "G1",
      "command": "python -m compileall -q .",
      "required": true
    },
    {
      "id": "G2",
      "command": "bash tools/run_quality_checks.sh",
      "required": true
    },
    {
      "id": "G3",
      "command": "python tools/smoke_test.py",
      "required": true
    },
    {
      "id": "G4",
      "command": "bash start.sh",
      "required": true
    },
    {
      "id": "G5",
      "command": "mini_ux_check_de_dialoge_next_steps_kontrast",
      "required": true
    }
  ],
  "autostart_requirements": {
    "dependency_resolution": "automatic_with_user_feedback",
    "status_messages": [
      "erfolgreich",
      "nicht möglich",
      "nicht nötig"
    ],
    "debug_mode_env": "LOG_LEVEL=DEBUG",
    "auto_quality_and_formatting": true,
    "user_feedback_after_each_check": true
  },
  "validation_policy": {
    "input_validation_required": true,
    "output_validation_required": true,
    "log_levels": [
      "DEBUG",
      "INFO",
      "WARN",
      "ERROR"
    ],
    "next_steps_in_error_messages": "required_in_plain_language"
  },
  "module_priority_policy": {
    "critical": [
      "PySide6",
      "PIL",
      "Pillow",
      "numpy",
      "pandas"
    ],
    "medium_default": "mittel"
  },
  "structure_policy": {
    "app": "GUI/Oberfläche",
    "core": "Kernlogik",
    "tools": "Qualitäts- und Reparaturskripte",
    "data": "Variable Daten und Konfiguration",
    "system_vs_variable_separation": "required"
  },
  "documentation_policy": {
    "readme_status_required": true,
    "changelog_mini_3_lines_required": true,
    "todo_update_required": true,
    "registry_update_required": true
  }
}
